---
import TolgeeProvider from '../../../src/TolgeeProvider.astro';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro + Tolgee</title>
		<TolgeeProvider />
	</head>
	<body>
		<ul>
			<li>
				<a href="/">English</a>
			</li>
			<li>
				<a href="/fr">French</a>
			</li>
			<li>
				<a href="/de">German</a>
			</li>
		</ul>
		<main>
			<slot />
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;

		font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
		
	}
	ul {
		display: flex;
		flex-direction: row;
		gap: 20px;
		padding: 0;
		margin: 0;
	}
	li {
		display: block;

	}

	main {
		font-size: 20px;
	}
</style>
